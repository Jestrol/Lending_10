@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'


html
	font-size baseFontSize
	height 100%
	line-height 1.3

body
	font-family open_sansregular
	height 100%

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color black
	text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select,
button
	outline none

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	height 100%


.content
	flex 1 0 auto

.container
	display flex
.main
	padding 65px 40px

	&__item
		margin-bottom 100px

		&:last-child
			margin-bottom 0

		&-title
			display block
			font-size rem(25)
			margin-bottom: 35px

		&-main
			display block
			font-size rem(30)
			margin-bottom: 35px

		&-text
			margin-bottom 50px











	&__row
		display flex
		margin-bottom 35px

		&:last-child
			margin-bottom 0

		&-val
			flex 0 0 150px

			width 150px







